{
  "name": "nodejs-template",
  "type": "module",
  "version": "0.0.0",
  "sideEffects": false,
  "engines": {
    "node": ">=18.x",
    "pnpm": ">=10.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "npx lefthook install",
    "commit": "git-cz",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.12.0",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "commitizen": "^4.3.1",
    "cz-git": "^1.11.1",
    "eslint": "^9.25.1",
    "lefthook": "^1.11.11",
    "typescript": "^5.8.3"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  }
}
